<h2>Chat with Other Users</h2>
<div class="row">
  <div class="col-md-8">
    <div id="chat-messages" class="border p-3 mb-3" style="height: 300px; overflow-y: scroll;">
      <!-- Messages will appear here -->
    </div>
    <form id="chat-form" class="d-flex">
      <input type="text" id="msg" class="form-control" placeholder="Type your message..." required>
      <button type="submit" class="btn btn-primary ms-2">Send</button>
    </form>
  </div>
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        Online Users
      </div>
      <div class="card-body">
        <ul id="users" class="list-group">
          <!-- Online users will appear here -->
        </ul>
      </div>
    </div>
  </div>
</div>